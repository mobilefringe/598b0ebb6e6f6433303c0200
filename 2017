        init(e);
        function renderAll(){
            var repo = getRepoDetailsByName("News Banner");
            if (repo != undefined) {
                var banner_images = repo.images;
                $.each(banner_images, function(key, val) {
                    var banner_img_url = val.photo_url_abs;
                    $("<div><div class='bottom image_medium' style='background-image: url(" + banner_img_url + ");'></div></div>").appendTo("#banner_container");
                });
            }
            
            var blog_posts = getBlogDataBySlug("20vic-news").posts;
            console.log(blog_posts)

            var posts_by_year = [];
            $.each(blog_posts, function(key, val){
                today = moment();
                published_on = moment(val.publish_date).format("YYYY");
                console.log(published_on)
                // if (today.tz(getPropertyTimeZone()) >= published_on.tz(getPropertyTimeZone())) {
                //     posts_by_year.push(val);
                // }
            });
                
            renderPosts('#posts_container', '#posts_template', blog_posts);
            
            show_content();
            
            $('.slick-slider').slick({
                arrows: false,
                dots: true,
                autoplay: true,
                autoplaySpeed: 5000  
            });
        }
        loadMallDataCached(renderAll); 
    });
